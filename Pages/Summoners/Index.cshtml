@page
@model LeagueMatchHistory.Pages.Summoners.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Accounts You Are Tracking</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Summoner[0].SummonerName)
            </th>
            <th>
                Profile Picture
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Summoner[0].SummonerLevel)
            </th>
            <th>
                Rank
            </th>
            <th>
                Details
            </th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Summoner) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SummonerName)
            </td>
            <td>
                @{string ProfilePicture = item.ProfileIconId + ".png";}

                <img src="~/dragontail-11.9.1/11.9.1/img/profileicon/@ProfilePicture" height="128" width="128" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SummonerLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tier) @Html.DisplayFor(modelItem => item.Rank) @Html.DisplayFor(modelItem => item.LeaguePoints) LP
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
